<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.315" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <items>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
         <content>
            <ListView fx:id="countriesListView" />
         </content>
      </ScrollPane>
      <VBox spacing="20.0">
         <children>
            <Label fx:id="countryName" text="Label" />
            <Label fx:id="countryCapital" layoutX="10.0" layoutY="10.0" text="Label" />
            <Label layoutX="30.0" layoutY="67.0" text="Label" />
            <Label layoutX="30.0" layoutY="104.0" text="Label" />
            <Label layoutX="30.0" layoutY="141.0" text="Label" />
         </children>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </VBox>
  </items>
</SplitPane>
